# Try to find all libraries and tools related to impala
# in order to compile and link against .impala files
#
# Impala_BIN
# Impala_INCLUDE_DIRS
# Impala_INCLUDE_DIR (deprecated)
# Impala_LIBRARIES
# Impala_LIBRARY (deprecated)
# Impala_FOUND

@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/impala-targets.cmake")

set(Impala_BIN AnyDSL::impala)
set(Impala_LIBRARIES AnyDSL::libimpala)

get_target_property(Impala_INCLUDE_DIRS ${Impala_LIBRARIES} INTERFACE_INCLUDE_DIRECTORIES)

find_package(Thorin REQUIRED PATHS "@Thorin_DIR@" NO_DEFAULT_PATH)

# Deprecated variables for backward compatibility:
find_path(Impala_INCLUDE_DIR NAMES impala/impala.h PATHS ${Impala_INCLUDE_DIRS})
set(Impala_LIBRARY AnyDSL::libimpala)

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(Impala DEFAULT_MSG Impala_DIR)
